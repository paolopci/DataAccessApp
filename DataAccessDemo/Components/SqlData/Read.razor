@rendermode InteractiveServer
@inject IPeopleData sql
@inject SelectedPersonState selectedPersonState

<h3 class="mb-3">Read People</h3>
@if (people != null)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in people)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>
                        <button class="btn btn-outline-primary" @onclick="() => UpdatePerson(person)">Update</button>
                        <button class="btn btn-outline-danger" @onclick="() => DeletePerson(person)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Loading...</p>
}
<div>
    <button class="btn btn-outline-primary my-3" @onclick="RefreshData" type="button">Refresh Data</button>
</div>

@code {
    private IEnumerable<PersonModel>? people = new List<PersonModel>();

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
    }

    private async Task RefreshData()
    {
        people = null;
        people = await sql.GetAllPeople();
    }

    private void UpdatePerson(PersonModel person)
    {
        selectedPersonState.SetPerson(person);
    }

    private void DeletePerson(PersonModel person)
    {
        selectedPersonState.SetPerson(person);
    }
}
